<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head.ejs")  %>
        <link rel="stylesheet" href="/css/login.css">
    </head> 
<body>
    <%- include("../partials/header.ejs")  %> 
    <main>
        <h2>Login</h2>
        <form action="/users/access" method="post">
            <fieldset class="field">
                <label for="email">
                    <i class="fa-solid fa-user"></i>
                </label>
                <input type="text" name="email" id="email"
                value="<%= locals.errores && !locals.errores.email && locals.data ? locals.data.email : null %>"> 
                <% if (locals.errores && locals.errores.email) { %>
                    <p class="feedback">
                        <%= locals.errores.email.msg %> 
                    </p>
                    <% } %>
            </fieldset>
            <fieldset class="field">
                <label for="password">
                    <i class="fa-solid fa-key"></i>
                </label>
                <input type="password" name="password" id="password"
                value="<%= locals.errores && !locals.errores.password && locals.data ? locals.data.password: null %>"> 
                <% if (locals.errores && locals.errores.password) { %>
                    <p class="feedback">
                        <%= locals.errores.password.msg %> 
                    </p>
                <% } %>
            </fieldset>
            <fieldset class=" field btns">
                <button type="submit">
                    <i class="fa-solid fa-plane"></i>
                </button>
                <button type="reset">
                    <i class="fa-solid fa-sync"></i>
                </button>
            </fieldset>
        </form>
    </main>
    <%- include("../partials/footer.ejs")  %> 
</body>
</html>